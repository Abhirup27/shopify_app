                            <div>Added phone number verification</div>
                            <div class="small text-muted">June 12, 2023</div>
                        </div>
                    </div>
                </div>

                <div>
                    <h5 class="fw-bold mb-3">Quick Actions</h5>
                    <div class="d-flex gap-2">
                        <button class="btn btn-outline-primary flex-fill">
                            <i class="bi bi-key me-1"></i>Change Password
                        </button>
                        <button class="btn btn-outline-primary flex-fill">
                            <i class="bi bi-phone me-1"></i>Add Phone
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
  // Simple animation for profile elements
  document.addEventListener('DOMContentLoaded', function() {
    const elements = document.querySelectorAll('.store-card, .profile-header');

    elements.forEach((el, index) => {
      setTimeout(() => {
        el.style.opacity = "1";
        el.style.transform = "translateY(0)";
      }, 100 * index);
    });
  });
</script>

