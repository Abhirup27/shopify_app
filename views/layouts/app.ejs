<!DOCTYPE html>
<html lang="en">
<%- include('head') %>
<body>
    <%- include('header') %>
    
    <!-- ======= Sidebar ======= -->
    <% if (user.hasRole('SUPER_ADMIN')) { %>
        <% if(showSidebar) { %>
            <%- include('../superadmin/aside') %>
        <% } %>
    <% } %>
     <% if (user.hasRole('ADMIN') || user.hasRole('SUB_USER')) { %>
